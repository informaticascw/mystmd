// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/universal
{
	"name": "Default Linux Universal",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/universal:2-linux",

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	 "forwardPorts": [3000, 3010],
	 "portsAttributes": {
		"3000": {
		  "label": "my-book",
		  "onAutoForward": "notify"
		},
		"3100": {
		  "label": "mystmd-info",
		  "onAutoForward": "ignore"
		}
	  },

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "pip install --no-input mystmd",

	// Use 'postStartCommand' to run commands after the container is (re)started.
	"postStartCommand": "bash -c 'cd my-book && nohup myst start > ../myst.log 2>&1 &'",

	"customizations": {
		"vscode": {
			"extensions": [
				"ExecutableBookProject.myst-highlight"
			]
		}
	}

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
